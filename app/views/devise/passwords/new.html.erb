<div class="has-bg-lilac-10">
  <div class="container is-fullpage is-centered-middle is-flex-column">
    <h2 class="has-mb-48 is-size-2 is-size-5-mobile">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %>
        <div class="control">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
        </div>
      </div>

      <div class="actions">
        <div class="control">
          <%= f.submit "Send me reset password instructions", class: "button is-primary"%>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
