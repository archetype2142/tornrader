<% @page_title = "Account Settings" %>
<div class="container">
  <div class="is-centered-middle is-flex-column">
    <div class="box has-padding-36 has-mt-24 has-mb-24">
      <h2 class="has-mb-48 is-size-2 is-size-5-mobile">Sign Up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>



        <div class="field">
          <%= f.label "torn user id" %>
          <em>(XID)</em>
          <span id="tooltip-icon">
            <i class="fas fa-question-circle"></i>
            <%= image_tag "xid", id: "xid-tooltip", class: "hide-slow" %>
          </span>
          <div class="control">
            <%= f.number_field :torn_user_id, autofocus: true, autocomplete: "torn_id", type: "integer", class: "input", required: "true" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :torn_api_key %>
          <a href="https://www.torn.com/preferences.php#tab=api" target="_blank">
            <i class="fas fa-question-circle"></i>
          </a>
          <div class="control">      
            <%= f.text_field :torn_api_key, autofocus: true, class: "input", required: "true" %>
          </div>
        </div>
        
        <div class="field">
          <%= f.label :password %>
          <div class="control">
            <%= f.password_field :password, autocomplete: "new-password", class: "input", required: "true" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <div class="control">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", required: "true" %>
          </div>
        </div>

        <div class="actions">
          <div class="control">      
            <%= f.submit "Sign up", class: "button is-primary" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<script>
  var tooltip = document.getElementById("xid-tooltip");
  var tooltip_icon = document.getElementById("tooltip-icon"); 
  
  tooltip_icon.addEventListener("mouseover", function( event ) {   
    tooltip.classList.add("show");
  });

  tooltip_icon.addEventListener("mouseout", function( event ) {   
    tooltip.classList.remove("show");
  });

</script>
  

